{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "rootDir": "",
    "outDir": "dist",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "types",
    "docs"
  ],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"],
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
